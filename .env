APP_NAME=G-Planning
APP_ENV=local
APP_KEY=        # (la clé sera remplie par `php artisan key:generate`)
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Base de données : SQLite ---
DB_CONNECTION=sqlite
# ⚠️ Mets ici le chemin ABSOLU vers database.sqlite (voir étape B ci-dessous)
DB_DATABASE=/workspaces/g-planning/database/database.sqlite

# (les variables MySQL peuvent rester, elles ne seront pas utilisées en SQLite)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE= /workspaces/g-planning/database/database.sqlite
DB_USERNAME=
DB_PASSWORD=

CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
FILESYSTEM_DISK=local

# Mail (optionnel pour dev)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"
